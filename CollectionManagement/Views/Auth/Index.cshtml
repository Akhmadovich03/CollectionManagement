@model string?

@{
    ViewData["Title"] = "Login";
}
<header>
    <nav class="navbar fixed-top navbar-dark bg-secondary box-shadow mb-3 justify-content-between">
        <div class="d-flex">
            <a class="navbar-brand text-light ms-3" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-collection"></i>
                CollectIt
            </a>
        </div>
    </nav>
</header>

<div class="container">
    <div class="login-container shadow">

        @if (Model is not null)
        {
            <div class="alert alert-info text-center" role="alert">
                @Model
            </div>
        }
        <div class="logo">
            <img src="https://scalebranding.com/wp-content/uploads/2022/02/Letter-R-Logo-2-2-1024x1024.jpg" alt="LeetCode Logo">
        </div>
        <form method="post" asp-action="Login">
            <div class="form-group">
                <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
            </div>
            <div class="form-group mt-4">
                <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
            </div>
            <button type="submit" class="btn btn-secondary btn-block mt-4">Sign In</button>
            <div class="form-group mt-5">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <a class="nav-link text-secondary" asp-area="" asp-controller="Auth" asp-action="SignUp">Register</a>
                    </div>
                    <div>
                        <a class="nav-link text-secondary" asp-area="" asp-controller="Auth" asp-action="ChangingPassword">
                            Forgot <strong>Password?</strong>
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>