@model string?

@{
    ViewData["Title"] = "Sign Up";
}

<header>
    <nav class="navbar fixed-top navbar-dark bg-secondary box-shadow mb-3 justify-content-between">
        <div class="d-flex">
            <a class="navbar-brand text-light ms-3" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-collection"></i>
                CollectIt
            </a>
        </div>
    </nav>
</header>

<div class="container">
    <div class="login-container shadow">
        @if (Model != null)
        {
            <div class="alert alert-danger text-center" role="alert">
                @Model
            </div>
        }
        <div class="logo">
            <img src="https://scalebranding.com/wp-content/uploads/2022/02/Letter-R-Logo-2-2-1024x1024.jpg" alt="LeetCode Logo">
        </div>
        <form method="post" asp-action="SignUp" class="justify-content-center">
            <div class="form-group">
                <input type="text" class="form-control" id="userName" name="userName" placeholder="Username" required>
            </div>
            <div class="form-group mt-4">
                <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
            </div>
            <div class="form-group mt-4">
                <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
            </div>
            <button type="submit" class="btn btn-secondary btn-block mt-4">Register</button>
            <div class="d-flex justify-content-center">
                <div class="mt-2">
                    Have an account?
                </div>
                <a class="nav-link text-secondary mt-2 ms-1" asp-area="" asp-controller="Auth" asp-action="Index">Sign in</a>
            </div>
        </form>
    </div>
</div>