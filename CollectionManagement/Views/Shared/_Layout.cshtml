<!DOCTYPE html>
<html lang="en" data-bs-theme="" id="htmlPage">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CollectIt</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CollectionManagement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/26.2.4/material.css" />
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/26.2.4/fluent.css" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.css"></script>
    <script src="https://cdn.syncfusion.com/ej2/26.2.4/dist/ej2.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/3.1.18/signalr.min.js"></script>

    <style>
        .form-control[readonly] {
            background-color: gray; 
            border-color: #adb5bd; 
        }

        .login-container {
            max-width: 400px;
            margin: 100px auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 10px;
        }

            .login-container .logo {
                text-align: center;
                margin-bottom: 20px;
            }

                .login-container .logo img {
                    max-width: 100px;
                }

        .add-button-footer {
            position: absolute;
            right: 70px;
            bottom: 20px;
            float: none;
            height: 50px;
            z-index: 985;
        }

        .circle-button {
            position: relative;
            width: 50px;
            height: 50px;
            background-color: #fff;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            transition: box-shadow 0.3s, transform 0.3s;
            color: black;
            font-size: 24px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

            .circle-button:hover {
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
                transform: translateY(-2px);
            }

        .hint {
            position: absolute;
            bottom: 60px;
            left: 50%;
            transform: translateX(-50%);
            background-color: #333;
            color: #fff;
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 14px;
            visibility: hidden;
            opacity: 0;
            transition: opacity 0.3s;
            white-space: nowrap;
        }

        .circle-button:hover .hint {
            visibility: visible;
            opacity: 1;
        }

        .e-switch-wrapper.custom-switch {
            width: 50px;
            height: 24px;
        }

        .e-switch-wrapper.bar-color .e-switch-inner,
        .e-switch-wrapper.bar-color .e-switch-off {
            background-color: white;
            border-color: white;
        }

        .checkbox {
            opacity: 0;
            position: absolute;
            display: none !important;
        }
        .checkbox-label{
            background-color: #fff;
            width: 45px;
            height: 23px;
            border-radius: 50px;
            position: relative;
            padding: 4px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .bi-moon {color: #f1c40f;}
        .bi-sun {color: #f39c12;}
        .checkbox-label .ball{
            background-color: #6c757d;
            width: 20px;
            height: 20px;
            position: absolute;
            left: 2px;
            top: 2px;
            border-radius: 50%;
            transition: transform 0.2s linear;
        } 
        .checkbox:checked + .checkbox-label .ball {
            transform: translateX(20px);
        }
        #checkbox {display: none;}

        #dropdownMenuLink::after {
            display: none;
        }

        #collectionMenuLink::after {
            display: none;
        }

        .sticky-bottom {
            position: sticky;
            bottom: 0;
            background-color: white; 
            z-index: 10; 
        }
        </style>

</head>
<body>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <ejs-scripts></ejs-scripts>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>